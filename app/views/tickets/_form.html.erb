<%= simple_form_for @ticket, html: { id: "ticket" } do |f|%>
  <%= f.input :number, :label => "E-ticket" %>
  <%= f.input :origin, :label => "Origem", collection: @places, input_html: { class: "select2 places" }, :label_method => :info %>
  <%= f.input :destiny, :label => "Destino", collection: @places, input_html: { class: "select2 places" }, :label_method => :info %>
  <%= f.input :departure_time, :label => "Data - Horário de Saída" %>
  <%= f.input :arrival_time, :label => "Data - Horário de Chegada" %>
  <%= f.input :company, :label => "Companhia Aérea" %>
  <%= f.submit class: "btn btn-primary" %>
<% end %>



