
  <div class="home-header">
    <div id="carouselHomeCard" class="carousel slide" data-ride="carousel">
      <div class="home-card">
        <div class="carousel-inner">
            <div class="carousel-item active" data-interval="10000">
              <div class="card-body flex-column">
                <div class="card-icon">
                  <%= image_tag('airplane.svg') %>
                </div>
                <div class="card-text">
                  <h1 id="greeting" class="text-center"></h1>
                  <% if current_user.name %>
                    <h1 class="card-special-text"><%= current_user.name %>!</h1>
                  <% else %>
                    <h1 class="card-special-text"><%= current_user.email %>!</h1>
                  <% end %>
                </div>
              </div>
            </div>
          <div class="carousel-item" data-interval="10000">
            <div class="card-body flex-column justify-content-center">
              <% if current_user.tickets.count == 0 %>
                <div class="card-icon">
                  <%= image_tag('no-flights.svg') %>
                </div>
                <div class="card-text p-1">
                  <h1>You dont have any flights coming.</h1>
                  <%= link_to new_ticket_path do %>
                    <div class="btn btn-header">Register now!</div>
                  <% end %>
                </div>
              <% else %>
                <div class="card-text p-1">
                  <h2>Next Flight</h2>
                </div>
                <div class="card-icon">
                  <%= image_tag('next-flight.svg') %>
                </div>
                <div class="card-text p-1">
                  <h2 class="text-center"><%= current_user.tickets.first.departure_time.strftime("%d/%m") %></h2>
                </div>
                <div class="d-flex justify-content-center align-items-center flex-column">
                  <div class="card-text p-1">
                    <h2><%= current_user.tickets.first.origin.code %> <i class="fas fa-plane fa-xs"></i> <%= current_user.tickets.first.destination.code %></h2>
                    <h2 class="flight-info-time"><%= current_user.tickets.first.departure_time.strftime("%H:%M") %> - <%= current_user.tickets.first.arrival_time.strftime("%H:%M") %>
                    <% if current_user.tickets.first.departure_time.day != current_user.tickets.first.arrival_time.day %>
                      <span class="flight-plus-one"> <sup>+1</sup></span>
                    <% end %>
                    </h2>
                  </div>
                  <div class="card-text p-1">
                    <h1 class="text-center">E-ticket: <%= current_user.tickets.first.number %></h1>
                  </div>
                  <div class="card-text p-1">
                    <h1>Company: <%= current_user.tickets.first.company.name %></h1>
                  </div>
                  <%= link_to tickets_path do %>
                    <div class="btn btn-header">Flights</div>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
          <div class="carousel-item" data-interval="10000">
            <div class="card-body flex-column">
              <div class="card-icon">
                <%= image_tag('email.svg') %>
              </div>
              <div class="card-text">
                <h1 class="text-center"> We will send you an email a few minutes before your boarding time to make sure you are getting in.</h1>
                <h1 class="text-center">Just confirm and we'll do the rest!</h1>
              </div>
            </div>
          </div>
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselHomeCard" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselHomeCard" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
