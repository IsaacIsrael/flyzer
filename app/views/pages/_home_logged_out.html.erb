<div class="container">
  <div class="home-header">
    <div id="carouselHomeCard" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active" data-interval="100000">
              <div class="card-body d-flex flex-column justify-content-between align-items-center home-height">
                  <div class="card-icon">
                    <%= image_tag('airplane.svg') %>
                  </div>
                  <div class="card-text login-button">
                    <%= link_to new_user_session_path do %>
                        <div class="btn btn-header">Login</div>
                    <% end %>
                  </div>
                <div class="new-register">
                    <%= link_to new_user_registration_path do %>
                      <div class="wrapper d-flex flex-column justify-content-center align-items-center">
                        <div class="white-login-text">
                          <h2>Not registred yet?</h2>
                        </div>
                        <div class="card-icon p-2">
                          <%= image_tag('login.svg') %>
                        </div>
                        <div class="white-login-text">
                          <h2>Sign up now!</h1>
                        </div>
                      </div>
                    <% end %>
                </div>
              </div>
            </div>
          <div class="carousel-item" data-interval="100000">
            <div class="card-body d-flex flex-column justify-content-between align-items-center home-height">
              <div class="card-icon">
                <%= image_tag('traveller.svg') %>
              </div>
              <div class="card-text text-center card-question">
                <h1>Where are you heading next?</h1>
              </div>
              <div>
                <%= link_to flight_search_path do %>
                  <div class="btn btn-header">Search</div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <a class="carousel-control-prev" href="#carouselHomeCard" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselHomeCard" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
</div>
