<section class="flight-index">

  <h1 class="text-center">Flights</h1>
  <p>Cidade: <%=  @city  %></p>
  <p>Data:  <%=  @date  %></p>

  <% flight = Flight.first %>
  <h3 class="text-center p-1">NOSSAS ESCOLHAS</h3>
  <div class="index-card d-flex w-100 flex-row justify-content-center align-items-center">
    <div class="featured d-flex flex-column justify-content-center align-items-center">
      <p class="text-center special-featured"><i class="fas fa-plus fa-xs"></i> Barato</p>
      <i class="fas fa-dollar-sign fa-3x p-4"></i>
    </div>
    <div class="card-body d-flex flex-column">
      <div>
        <h1><%= flight.departure_time.strftime("%H:%M") %> - <%= flight.arrival_time.strftime("%H:%M") %></h1>
      </div>
      <div>
        <p>Duração: <%= distance_of_time_in_words(flight.departure_time, flight.arrival_time) %></p>
      </div>
      <div class="d-flex flex-row align-items-center justify-content-between">
        <h2><%= humanized_money_with_symbol(flight.price) %></h2>
        <p>Assentos Disponíveis: <%= flight.available_seats %></p>
      </div>
    </div>
  </div>
  <div class="index-card d-flex w-100 flex-row justify-content-center align-items-center">
    <div class="featured d-flex flex-column justify-content-center align-items-center">
      <p class="text-center special-featured"><i class="fas fa-plus fa-xs"></i> Rapido</p>
      <i class="fas fa-clock fa-3x p-4"></i>
    </div>
    <div class="card-body d-flex flex-column">
      <div>
        <h1><%= flight.departure_time.strftime("%H:%M") %> - <%= flight.arrival_time.strftime("%H:%M") %></h1>
      </div>
      <div>
        <p>Duração: <%= distance_of_time_in_words(flight.departure_time, flight.arrival_time) %></p>
      </div>
      <div class="d-flex flex-row align-items-center justify-content-between">
        <h2><%= humanized_money_with_symbol(flight.price) %></h2>
        <p>Assentos Disponíveis: <%= flight.available_seats %></p>
      </div>
    </div>
  </div>
  <div class="index-card d-flex w-100 flex-row justify-content-center align-items-center">
    <div class="featured d-flex flex-column justify-content-center align-items-center">
      <p class="text-center special-featured"><i class="fas fa-plus fa-xs"></i> Conveniente</p>
      <i class="fas fa-star fa-3x p-4"></i>
    </div>
    <div class="card-body d-flex flex-column">
      <div>
        <h1><%= flight.departure_time.strftime("%H:%M") %> - <%= flight.arrival_time.strftime("%H:%M") %></h1>
      </div>
      <div>
        <p>Duração: <%= distance_of_time_in_words(flight.departure_time, flight.arrival_time) %></p>
      </div>
      <div class="d-flex flex-row align-items-center justify-content-between">
        <h2><%= humanized_money_with_symbol(flight.price) %></h2>
        <p>Assentos Disponíveis: <%= flight.available_seats %></p>
      </div>
    </div>
  </div>

  <h3 class="text-center p-4">OUTROS VÔOS</h3>
  <% @flights.each do |flight| %>
  <div class="index-card reverse-style d-flex w-100 ">
    <div class="card-body d-flex flex-column">
      <div>
        <h1><%= flight.departure_time.strftime("%H:%M") %> - <%= flight.arrival_time.strftime("%H:%M") %></h1>
      </div>
      <div>
        <p>Duração: <%= distance_of_time_in_words(flight.departure_time, flight.arrival_time) %></p>
      </div>
      <div class="d-flex flex-row align-items-center justify-content-between">
        <h2><%= humanized_money_with_symbol(flight.price) %></h2>
        <p>Assentos Disponíveis: <%= flight.available_seats %></p>
      </div>
    </div>
  </div>
  <% end %>
</section>
