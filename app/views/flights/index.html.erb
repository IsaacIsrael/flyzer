<section class="flight-index">
  <div class="container">
  <h1 class="text-center">Flights</h1>
  <p>Cidade: <%=  @city  %></p>
  <p>Data:  <%=  @date  %></p>

  <% @flights.each do |flight| %>
    <div>
      <p><%= flight.route %></p>
      <p>
        Duration: <%= distance_of_time_in_words(flight.departure_time, flight.arrival_time)%>
      </p>
      <p>Seats: <%= flight.available_seats %></p>
      <p>Amount: <%= humanized_money_with_symbol(flight.price) %></p>
    </div>
  <% end %>
  </div>
</section>
