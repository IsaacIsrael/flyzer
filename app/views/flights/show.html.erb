<section class="flights-show">
  <div class="index-card d-flex flex-column justify-content-center align-items-center">
    <div class="flight-info text-center">
      <h1 class="flight-info-route"><%= @flight.origin.code %> - <%= @flight.destiny.code %></h1>
      <p class="flight-info-duration"><%= @flight.origin.city %> - <%= @flight.destiny.city %></p>
      <h2 class="flight-info-time"><%= @flight.departure_time.strftime("%H:%M") %> - <%= @flight.arrival_time.strftime("%H:%M") %>
        <% if @flight.departure_time.day != @flight.arrival_time.day %>
          <span class="flight-plus-one"> <sup>+1</sup></span>
        <% end %></h2>
      <p class="flight-info-duration">Duração: <%= distance_of_time_in_words(@flight.departure_time, @flight.arrival_time) %></p>
      <% if @flight.stops.count >= 1 %>
        <div class="stops" data-toggle="collapse" data-target="#stops-info" aria-expanded="false" aria-controls="stops-info">
         <p><i class="fas fa-plus-circle fa-lg"></i></p>
        </div>
          <div class="collapse" id="stops-info">
            <% @flight.stops.each_with_index do | stop, index | %>
              <h4 class="stops-header"> <%= index + 1 %></h4>
              <p><i class="fas fa-plane fa-xs"></i> <%= stop.place.name %></p>

              <p class="stops-footer"><i class="fas fa-clock fa-xs"></i> Duração aproximada: <%= Time.at(stop.duration).utc.strftime("%H") %> horas </p>
            <% end %>
          </div>
      <% end %>
    </div>
  </div>
  <div class="index-card reverse-style d-flex flex-column justify-content-center align-items-center">
    <div id="order">
      <div id="price" data-amount-cents="<%= @flight.price_cents %>" >
      </div>
      <h1><%= humanized_money_with_symbol(@flight.price) %>/Seat</h1>
      <p>Avalible seats: <span id="available_seat" data-limit="<%= @flight.available_seats %>"><%= @flight.available_seats %></span></p>
      <div class="flex-between">
      <% if @flight.available_seats > 0 %>
        <span>Buy Seats:</span>
        <div class="actions" id="actions">
          <a href="#/" class="btn btn-round incrementer minus" data-limit="<%= @flight.available_seats %>" disabled data-offset="-1">-</a>
          <span id="counter" data-count="1">1</span>
          <a href="#/" class="btn btn-round incrementer plus" data-limit="<%= @flight.available_seats %>" data-offset="1">+</a>
        </div>
      <% else %>
        <p style="color: red">Sorry, no more seats available for this flight...</p>
      <% end %>
      </div>
      <%= simple_form_for [@flight, @order] do |f| %>
        <%= f.input :order_seat, label: false,as: :hidden ,:input_html => { :value => "1" } %>
        <% if @flight.available_seats > 0 %>
          <%= f.button :submit, "Pay #{humanized_money_with_symbol(@flight.price)}" ,class: 'submit btn btn-danger',:input_html => { value: "1" }, id:"" %>
        <% end %>
      <% end %>
    </div>
  </div>
</section>
