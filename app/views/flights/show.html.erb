<section class="flights-show">
  <div class="index-card">
    <h1><%= @flight.origin.code %> - <%= @flight.destiny.code %></h1>
    <h2><%= @flight.departure_time.strftime("%H:%M") %> - <%= @flight.arrival_time.strftime("%H:%M") %>
      <% if @flight.departure_time.day != @flight.arrival_time.day %>
        <i class="fas fa-plus fa-xs"></i> 1
      <% end %></h2>
      <p>Duração: <%= distance_of_time_in_words(@flight.departure_time, @flight.arrival_time) %></p>
  </div>
</section>
