<%- if !['sessions', 'passwords'].include?(controller_name) %>
  <%= link_to "Log in", new_session_path(resource_name), class: "btn btn-outline-primary" %>
<% end %>
<div class="google-login">
  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= link_to omniauth_authorize_path(resource_name, provider) do %>
        <div class="index-card d-flex justify-content-between align-items-center nova-classe">
          <div class="featured">
            <i class="fab fa-google"></i>
          </div>
          <div class="google-text">
            Sign in <span style="font-weight: 300">Google</span>
          </div>
        </div>
      <% end %>
    <% end %>
</div>

<div class="forgot-password">
  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Forgot your password?", new_password_path(resource_name) %>
  <% end %>
</div>

<div class="new-register">
  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to new_registration_path(resource_name) do %>
      <div class="wrapper d-flex flex-column justify-content-center align-items-center">
        <div class="white-login-text">
          Not registred yet?
        </div>
        <div class="card-icon p-2">
          <%= image_tag('login.svg') %>
        </div>
        <div class="white-login-text">
          Sign up now!
        </div>
      </div>
    <% end %>
  <% end %>
</div>


<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %>
<% end %>

<% end %>
