<section class="forgot-password">
  <div class="d-flex flex-column w-70 justify-content-center align-items-center text-center p-1">
    <h2>Forgot your password?</h2>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    placeholder: "email@mail.com",
                    label_html: {class: "input-text-color"},
                    input_html: { class: "border-round text-center" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Send me reset password instructions", class: "btn-primary border-round" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</section>
