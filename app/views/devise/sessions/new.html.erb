<section class="user-login">
<h2 class="text-center white-login-text"><strong>Welcome!</strong></h2>
<div class="d-flex flex-column w-70 justify-content-center align-items-center text-center p-1">
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, label: "E-mail", label_html: { class: "white-login-text" },
                required: false,
                autofocus: true,
                placeholder: "email@mail.com",
                input_html: { autocomplete: "email", class: "border-round text-center" } %>
    <%= f.input :password, label: "Password", label_html: { class: "white-login-text"},
                required: false,
                placeholder: "******",
                input_html: { autocomplete: "current-password", class: "border-round text-center" } %>
      <%= f.input :remember_me, label: "Remember me", label_html: { class: "custom-control-label"}, wrapper_html: { class: "custom-control custom-checkbox"}, input_html: { class: "custom-control-input"}, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions index-card">
    <%= f.button :submit, "Sign In", class: "white-login-text" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</section>
